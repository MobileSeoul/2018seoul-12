<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="11dp"
    app:cardCornerRadius="17dp"
    android:id="@+id/rv_item_map_page_my_around_k_spot_btn"
    android:foreground="?android:selectableItemBackground">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/rv_item_map_page_my_around_k_spot_img"
            android:layout_width="match_parent"
            android:layout_height="190dp" />
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp">
                <TextView
                    android:id="@+id/rv_item_map_page_my_around_k_spot_title"
                    android:text="서울남산타워"
                    android:fontFamily="@font/nanumsquareotf_bold"
                    android:textColor="#323232"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/map_star_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rv_item_map_page_my_around_k_spot_star_pnt"
                    android:text="4.4"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nanumsquareotf_regular"
                    android:textColor="#C0C0C0"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/rv_item_map_page_my_around_k_spot_content"
                android:text="서울의 야경을 한번에 볼 수 있는 랜드마크"
                android:textColor="#707070"
                android:textSize="13dp"
                android:fontFamily="@font/nanumsquareotf_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp">
                <ImageView
                    android:src="@drawable/map_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rv_item_map_page_my_around_k_spot_address"
                    android:text="용산구 · 명동역"
                    android:textSize="11dp"
                    android:fontFamily="@font/nanumsquareotf_regular"
                    android:textColor="#C0C0C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <View
                android:background="#C0C0C0"
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:layout_marginBottom="12dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_item_map_page_my_around_k_spot_badge_list"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>