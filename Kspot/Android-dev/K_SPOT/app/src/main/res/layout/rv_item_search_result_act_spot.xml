<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/search_result_rv_item_rl"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="65dp">
    
    <ImageView
        android:id="@+id/search_result_rv_item_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search_page_place_restaurant_icon"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/search_result_rv_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/search_result_rv_item_icon_iv"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="8dp"
        android:text="방탄삼겹살"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/search_result_rv_item_icon_iv"
        android:layout_below="@+id/search_result_rv_item_title_tv"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/search_result_rv_item_address_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_page_place_result_spot_icon"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/search_result_rv_item_spot_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/search_result_rv_item_address_iv"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:text="용산구 · 숙대입구역"
            android:textSize="10dp"
            android:textColor="#C5C5C5"
            android:fontFamily="@font/nanumsquareotf_regular"
            />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E0E0E0"
        android:layout_alignParentBottom="true"
        ></View>



    

</RelativeLayout>